{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "Build Debug",
            "type": "shell",
            "options": {
                "cwd": "DailyScreenshot"
            },
            "command": "mdtool",
            "args": [
                "build",
                "-c:Debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Deploy Debug",
            "type": "shell",
            "options": {
                "cwd": "DailyScreenshot/obj/Debug"
            },
            "command": "mv",
            "args": [
                "DailyScreenshot.{dll,pdb}",
                "~/.steam/steam/steamapps/common/'Stardew Valley'/Mods/DailyScreenshot/."
            ],
            "problemMatcher": [],
            "group": "none",
            "dependsOn": ["Build Debug"]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "options": {
                "cwd": "DailyScreenshot"
            },
            "command": "mdtool",
            "args": [
                "build",
                "-c:Release"
            ],
            "problemMatcher": [],
            "group": "build"
        }
    ]
}