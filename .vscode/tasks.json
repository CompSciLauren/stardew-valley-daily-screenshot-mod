{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "Clean",
            "type": "process",
            "options": {
                "cwd": "DailyScreenshot"
            },
            "command": "mdtool",
            "args": [
                "build",
                "-t:Clean",
                "-c:${input:Configuration}"
            ],
            "problemMatcher": ["$msCompile"],
            "group": "none",
            "detail": "Cleans the workspace",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "revealProblems": "onProblem"
            }
        }, {
            "label": "Build",
            "type": "process",
            "options": {
                "cwd": "DailyScreenshot"
            },
            "command": "mdtool",
            "args": [
                "build",
                "-c:${input:Configuration}"
            ],
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "Deploy",
            "type": "shell",
            "options": {
                "cwd": "DailyScreenshot/obj/${input:Configuration}"
            },
            "command": "mv",
            "args": [
                "DailyScreenshot.{dll,pdb}",
                "~/.steam/steam/steamapps/common/'Stardew Valley'/Mods/DailyScreenshot/."
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "group": "none",
            "dependsOn": ["Build"]
        }
    ],
    "inputs": [{
        "id": "Configuration",
        "type": "pickString",
        "description": "Build type",
        "options": ["Debug", "Release"]
    }]
}